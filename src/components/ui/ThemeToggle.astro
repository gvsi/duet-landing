<button
    id="theme-toggle"
    type="button"
    class="theme-toggle"
    aria-label="Toggle theme"
>
    <!-- Sun icon -->
    <svg
        class="sun-icon"
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="20"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
    >
        <circle cx="12" cy="12" r="5"></circle>
        <line x1="12" y1="1" x2="12" y2="3"></line>
        <line x1="12" y1="21" x2="12" y2="23"></line>
        <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
        <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
        <line x1="1" y1="12" x2="3" y2="12"></line>
        <line x1="21" y1="12" x2="23" y2="12"></line>
        <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
        <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
    </svg>
    <!-- Moon icon -->
    <svg
        class="moon-icon"
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="20"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
    >
        <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
    </svg>
</button>

<style>
    .theme-toggle {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 8px;
        border-radius: 9999px;
        color: rgba(173, 173, 173, 1);
        background: transparent;
        border: 1px solid transparent;
        cursor: pointer;
        transition:
            color 0.2s ease,
            background 0.2s ease,
            border-color 0.2s ease;
    }

    .theme-toggle:hover {
        color: var(--duet-fg);
        background: rgba(255, 255, 255, 0.06);
    }

    html[data-theme="light"] .theme-toggle:hover {
        background: rgba(0, 0, 0, 0.05);
    }

    .sun-icon,
    .moon-icon {
        display: none;
    }

    /* Dark mode (default): Show Sun (to switch to light) */
    :global(html:not([data-theme="light"])) .sun-icon {
        display: block;
    }

    /* Light mode: Show Moon (to switch to dark) */
    :global(html[data-theme="light"]) .moon-icon {
        display: block;
    }
</style>

<script is:inline>
    (() => {
        const themeToggle = document.getElementById("theme-toggle");

        const safeLocalStorageGet = (key) => {
            try {
                return localStorage.getItem(key);
            } catch (error) {
                return null;
            }
        };

        const safeLocalStorageSet = (key, value) => {
            try {
                localStorage.setItem(key, value);
            } catch (error) {
                // Ignore storage write failures (Safari private mode, blocked cookies, etc.)
            }
        };

        const getTheme = () => {
            const storedTheme = safeLocalStorageGet("theme");
            if (storedTheme === "dark") {
                return "dark";
            }

            // Default to light unless the user explicitly chose dark.
            return "light";
        };

        const setTheme = (theme) => {
            if (theme === "light") {
                document.documentElement.setAttribute("data-theme", "light");
            } else {
                document.documentElement.removeAttribute("data-theme");
            }

            safeLocalStorageSet("theme", theme);
        };

        // Initialize toggle click handler
        themeToggle?.addEventListener("click", () => {
            const currentTheme = getTheme(); // This might read from LS, but for toggling we might want to check current DOM state or just use the same logic
            // If the user hasn't set a preference yet, getTheme() returns system pref.
            // If they click toggle, we want to invert that.

            // To be robust, let's check what's actually applied
            const isLight =
                document.documentElement.getAttribute("data-theme") === "light";
            const newTheme = isLight ? "dark" : "light";
            setTheme(newTheme);
        });
    })();
</script>
