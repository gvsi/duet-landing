---
import { HOME_LOGOS } from "./logosData";

const repeatedLogos = [...HOME_LOGOS, ...HOME_LOGOS];

const logoWidths: Record<string, number> = {
    Stripe: 72,
    Upwork: 97,
    Airtable: 124,
    Trello: 98,
    Wise: 98,
    Fiverr: 80,
    Ahrefs: 81,
};
---

<section class="home-logos" aria-label="Customer logos">
    <div class="mx-auto max-w-6xl px-6 md:px-10">
        <div class="home-logos__heading">
            <p class="home-logos__text">
                Trusted by forward-looking
                <span class="home-logos__text-highlight">
                    {" "}
                    professionals and teams{" "}
                </span>
                worldwide
            </p>
        </div>

        <div class="home-logos__ticker" aria-hidden="true">
            <ul class="home-logos__track" role="list">
                {
                    repeatedLogos.map((logo, index) => (
                        <li
                            class="home-logos__item"
                            style={`--logo-width: ${logoWidths[logo.name] ?? 98}px;`}
                            data-duplicate={
                                index >= HOME_LOGOS.length ? "" : undefined
                            }
                        >
                            <svg
                                class="home-logos__svg"
                                viewBox={logo.viewBox}
                                aria-hidden="true"
                                focusable="false"
                            >
                                {logo.paths.map((path) => (
                                    <path
                                        d={path.d}
                                        fill="currentColor"
                                        fill-rule={
                                            path.evenodd ? "evenodd" : undefined
                                        }
                                        clip-rule={
                                            path.evenodd ? "evenodd" : undefined
                                        }
                                    />
                                ))}
                            </svg>
                        </li>
                    ))
                }
            </ul>
        </div>
    </div>
</section>

<style>
    .home-logos {
        padding: 64px 0;
        position: relative;
        z-index: 1;
    }

    .home-logos__heading {
        display: flex;
        justify-content: center;
        margin-bottom: 24px;
    }

    .home-logos__text {
        margin: 0;
        text-align: center;
        text-wrap: balance;
        font-family:
            "Manrope Variable",
            ui-sans-serif,
            system-ui,
            -apple-system,
            BlinkMacSystemFont,
            "Segoe UI",
            Roboto,
            Helvetica,
            Arial,
            sans-serif;
        font-size: 15px;
        font-weight: 500;
        line-height: 19px;
        color: var(--duet-muted);
    }

    :global(html[data-theme="light"]) .home-logos__text {
        color: #18181b; /* Zinc-900 */
    }

    .home-logos__text-highlight {
        color: var(--prose-heading);
    }

    .home-logos__ticker {
        display: flex;
        align-items: center;
        width: 100%;
        max-width: 800px;
        margin: 0 auto;
        height: 80px;
        overflow: hidden;
        mask-image: linear-gradient(
            to right,
            rgba(255, 255, 255, 0) 0%,
            rgb(255, 255, 255) 30%,
            rgb(255, 255, 255) 70%,
            rgba(255, 255, 255, 0) 100%
        );
        -webkit-mask-image: linear-gradient(
            to right,
            rgba(255, 255, 255, 0) 0%,
            rgb(255, 255, 255) 30%,
            rgb(255, 255, 255) 70%,
            rgba(255, 255, 255, 0) 100%
        );
    }

    .home-logos__track {
        display: flex;
        align-items: center;
        flex-direction: row;
        gap: 16px;
        width: max-content;
        margin: 0;
        padding: 0;
        list-style: none;
        will-change: transform;
        animation: logosMarquee 40s linear infinite;
    }

    .home-logos__item {
        height: 64px;
        width: var(--logo-width, 98px);
        display: flex;
        align-items: center;
        flex-shrink: 0;
        color: var(--duet-muted);
        opacity: 0.7;
        transition:
            color 0.2s ease,
            opacity 0.2s ease;
    }

    :global(html[data-theme="light"]) .home-logos__item {
        color: #18181b; /* Zinc-900 */
        opacity: 1;
    }

    @media (hover: hover) {
        .home-logos__item:hover {
            opacity: 1;
            color: var(--prose-heading);
        }
    }

    .home-logos__svg {
        display: block;
        width: var(--logo-width, 98px);
        height: auto;
        max-height: 70px;
    }

    @media (max-width: 639px) {
        .home-logos__ticker {
            height: 56px;
        }

        .home-logos__item {
            height: 36px;
            width: calc(var(--logo-width, 98px) * 0.55);
        }

        .home-logos__svg {
            width: calc(var(--logo-width, 98px) * 0.55);
            max-height: 36px;
        }
    }

    @media (min-width: 640px) {
        .home-logos__track {
            gap: 36px;
        }
    }

    @media (prefers-reduced-motion: reduce) {
        .home-logos__track {
            animation: none;
            transform: none;
        }

        .home-logos__item[data-duplicate] {
            display: none;
        }
    }

    @keyframes logosMarquee {
        0% {
            transform: translateX(0);
        }
        100% {
            transform: translateX(-50%);
        }
    }
</style>
