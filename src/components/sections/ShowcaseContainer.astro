---
/**
 * ShowcaseContainer - A styled container wrapper for feature showcase sections.
 * Provides a full-width white/semi-transparent background with rounded corners
 * and backdrop blur effect, creating visual separation from the rest of the page.
 */
---

<div class="showcase-container-wrapper">
    <div class="showcase-container">
        <slot />
    </div>
</div>

<style>
    .showcase-container-wrapper {
        position: relative;
        width: 100%;
        padding: 0 16px;
        margin: 80px 0;
    }

    @media (min-width: 640px) {
        .showcase-container-wrapper {
            padding: 0 24px;
        }
    }

    @media (min-width: 1024px) {
        .showcase-container-wrapper {
            padding: 0 40px;
            margin: 120px 0;
        }
    }

    .showcase-container {
        position: relative;
        width: 100%;
        border-radius: 24px;
        overflow: visible;

        /* Light/dark theme backgrounds with blur */
        background: rgba(255, 255, 255, 0.5);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);

        /* Subtle border for definition */
        border: 1px solid rgba(0, 0, 0, 0.06);

        /* Soft shadow for depth */
        box-shadow:
            0 4px 24px rgba(0, 0, 0, 0.04),
            0 12px 48px rgba(0, 0, 0, 0.06);

        /* Inner padding for the contained sections */
        padding: 60px 0;
    }

    @media (min-width: 640px) {
        .showcase-container {
            border-radius: 32px;
            padding: 80px 0;
        }
    }

    @media (min-width: 1024px) {
        .showcase-container {
            border-radius: 40px;
            padding: 100px 0;
        }
    }

    /* Dark theme adjustments */
    :global(html:not([data-theme="light"])) .showcase-container {
        background: rgba(20, 20, 28, 0.45);
        border: 1px solid rgba(255, 255, 255, 0.08);
        box-shadow:
            0 4px 24px rgba(0, 0, 0, 0.2),
            0 12px 48px rgba(0, 0, 0, 0.3),
            inset 0 1px 0 rgba(255, 255, 255, 0.05);
    }
</style>
