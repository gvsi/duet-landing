<style>
    .categorization-showcase {
        position: relative;
        padding: 0 24px 120px;
        overflow: hidden;
    }

    .editorial-divider {
        max-width: 1200px;
        margin: 0 auto 80px;
        border-top: 1px solid var(--duet-border-editorial);
        padding-top: 24px;
        display: flex;
        justify-content: flex-start;
    }

    .feature-label {
        font-family: var(--font-sans);
        font-size: 11px;
        font-weight: 600;
        letter-spacing: 0.1em;
        text-transform: uppercase;
        color: var(--duet-muted);
    }

    .categorization-container {
        max-width: 1200px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: 1fr;
        gap: 64px;
    }

    @media (min-width: 1024px) {
        .categorization-container {
            grid-template-columns: 350px 1fr;
            align-items: start;
        }
    }

    .categorization-header {
        text-align: left;
        position: sticky;
        top: 120px;
    }

    .categorization-title {
        margin: 0 0 24px;
        font-family: var(--font-serif);
        font-size: 42px;
        font-weight: 500;
        line-height: 1.1;
        letter-spacing: -0.02em;
        letter-spacing: -0.02em;
        text-wrap: balance;
        color: var(--prose-heading);
    }

    .categorization-subtitle {
        margin: 0;
        font-family: var(--font-sans);
        font-size: 16px;
        font-weight: 400;
        line-height: 1.7;
        line-height: 1.7;
        color: var(--prose-text);
        max-width: 320px;
    }

    /* Inbox Mockup */
    .inbox-mockup {
        width: 100%;
        position: relative;
        display: flex;
        justify-content: center;
        font-family:
            -apple-system, BlinkMacSystemFont, "SF Pro Display", system-ui,
            sans-serif;
    }

    .window-wrapper {
        position: relative;
        width: 100%;
        max-width: 720px;
        z-index: 1;
    }

    /* Window */
    .window {
        width: 100%;
        background: var(--mockup-window-bg);
        border-radius: 4px; /* Sharper */
        border: 1px solid var(--mockup-border);
        box-shadow: var(--mockup-shadow);
        overflow: hidden;
        position: relative;
        opacity: 0;
        transform: translateY(30px);
        transition:
            opacity 0.9s cubic-bezier(0.23, 1, 0.32, 1),
            transform 0.9s cubic-bezier(0.23, 1, 0.32, 1);
    }

    .in-view .window {
        opacity: 1;
        transform: translateY(0);
    }

    /* Window Header */
    .window-header {
        height: 52px;
        background: transparent;
        border-bottom: 1px solid var(--mockup-border);
        display: flex;
        align-items: center;
        padding: 0 20px;
        color: var(--duet-muted);
    }

    .traffic {
        display: flex;
        gap: 8px;
    }

    .traffic-dot {
        width: 10px;
        height: 10px;
        border-radius: 9999px;
        opacity: 0.6;
    }

    .traffic-red {
        background: #ff5f57;
    }
    .traffic-yellow {
        background: #ffbd2e;
    }
    .traffic-green {
        background: #28c840;
    }

    .window-title {
        margin-left: 18px;
        font-size: 13px;
        font-weight: 500;
        letter-spacing: -0.01em;
    }

    .window-badge {
        margin-left: auto;
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 12px;
        font-weight: 500;
        color: var(--duet-muted);
    }

    /* Emails */
    .emails {
        flex: 1;
        min-height: 0;
        display: flex;
        flex-direction: column;
    }

    .email {
        display: flex;
        gap: 16px;
        padding: 16px 20px;
        border-bottom: 1px solid var(--email-border);
        opacity: 0;
        transform: translateY(20px);
        transition:
            opacity 0.7s cubic-bezier(0.23, 1, 0.32, 1) var(--delay),
            transform 0.7s cubic-bezier(0.23, 1, 0.32, 1) var(--delay);
    }

    .in-view .email {
        opacity: var(--final-opacity);
        transform: translateY(0);
    }

    .email-1 {
        --delay: 0.3s;
        --final-opacity: 1;
        background: var(--email-bg-1);
    }
    .email-2 {
        --delay: 0.5s;
        --final-opacity: 0.8;
    }
    .email-3 {
        --delay: 0.7s;
        --final-opacity: 0.6;
    }
    .email-4 {
        --delay: 0.9s;
        --final-opacity: 0.4;
    }
    .email-5 {
        --delay: 1.1s;
        --final-opacity: 0.2;
    }

    /* Avatars */
    .avatar {
        width: 32px;
        height: 32px;
        border-radius: 4px; /* Squared avatars for sharper look */
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 13px;
        font-weight: 600;
        color: white;
        flex-shrink: 0;
    }

    .avatar-teal {
        background: #14b8a6;
    }
    .avatar-blue {
        background: #3b82f6;
    }
    .avatar-purple {
        background: #8b5cf6;
    }
    .avatar-icon {
        background: rgba(255, 255, 255, 0.1);
        color: #a1a1aa;
    }

    /* Email Content */
    .email-content {
        flex: 1;
        min-width: 0;
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 2px;
    }

    .email-top {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .email-from {
        font-size: 13px;
        font-weight: 500;
        color: var(--duet-muted);
    }
    .email-from-strong {
        color: var(--duet-fg);
        font-weight: 600;
    }

    .email-time {
        margin-left: auto;
        font-size: 12px;
        color: var(--duet-muted);
    }

    .email-subject {
        font-size: 13px;
        color: var(--duet-muted);
    }
    .email-subject-strong {
        color: var(--duet-fg);
    }

    .email-preview {
        font-size: 12px;
        color: var(--duet-muted);
        margin-top: 2px;
        display: -webkit-box;
        -webkit-line-clamp: 1;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    /* Pills - Refined */
    .pill {
        font-size: 10px;
        padding: 2px 6px;
        border-radius: 2px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }

    .pill-red {
        background: rgba(239, 68, 68, 0.15);
        color: #fca5a5;
    }
    .pill-blue {
        background: rgba(59, 130, 246, 0.15);
        color: #93c5fd;
    }
    .pill-amber {
        background: rgba(212, 174, 94, 0.15);
        color: #fcd34d;
    }
    .pill-lavender {
        background: rgba(167, 139, 250, 0.15);
        color: #c4b5fd;
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const section = document.querySelector("[data-categorization-section]");
        if (!section) return;

        const observer = new IntersectionObserver(
            (entries) => {
                entries.forEach((entry) => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add("in-view");
                        observer.unobserve(entry.target);
                    }
                });
            },
            { threshold: 0.3 },
        );
        observer.observe(section);
    });
</script>
