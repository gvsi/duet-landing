<section
    id="organization"
    class="categorization-showcase"
    aria-label="Email categorization"
    data-categorization-section
>
    <div class="categorization-container">
        <header class="categorization-header">
            <!-- Feature Badge -->
            <div class="feature-badge">
                <div class="badge-ornament">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                        <rect x="3" y="3" width="7" height="7" rx="1"></rect>
                        <rect x="14" y="3" width="7" height="7" rx="1"></rect>
                        <rect x="14" y="14" width="7" height="7" rx="1"></rect>
                        <rect x="3" y="14" width="7" height="7" rx="1"></rect>
                    </svg>
                </div>
                <span class="badge-text">Organization</span>
            </div>
            <h2 class="categorization-title">Duet organizes your inbox</h2>
            <p class="categorization-subtitle">
                Automatic categorization filters noise and surfaces what matters. Instantly see what needs action, what's just FYI, and what can wait.
            </p>
        </header>

        <div class="inbox-mockup" aria-hidden="true">
            <!-- Removed: Ambient Glow -->

            <div class="window-wrapper">
                <div class="window-frame">
                    <!-- Clean Frame (No luminous glow) -->

                    <div class="window">
                        <div class="window-header">
                            <div class="traffic">
                                <span class="traffic-dot traffic-red"></span>
                                <span class="traffic-dot traffic-yellow"></span>
                                <span class="traffic-dot traffic-green"></span>
                            </div>

                            <div class="window-title">Inbox</div>

                            <div class="window-badge">
                                <svg
                                    class="gmail-icon"
                                    viewBox="52 42 88 66"
                                    width="16"
                                    height="12"
                                    aria-hidden="true"
                                >
                                    <path
                                        fill="#4285f4"
                                        d="M58 108h14V74L52 59v43c0 3.32 2.69 6 6 6"
                                    ></path>
                                    <path
                                        fill="#34a853"
                                        d="M120 108h14c3.32 0 6-2.69 6-6V59l-20 15"
                                    ></path>
                                    <path
                                        fill="#fbbc04"
                                        d="M120 48v26l20-15v-8c0-7.42-8.47-11.65-14.4-7.2"
                                    ></path>
                                    <path
                                        fill="#ea4335"
                                        d="M72 74V48l24 18 24-18v26L96 92"
                                    ></path>
                                    <path
                                        fill="#c5221f"
                                        d="M52 51v8l20 15V48l-5.6-4.2c-5.94-4.45-14.4-.22-14.4 7.2"
                                    ></path>
                                </svg>
                                <span>Gmail</span>
                            </div>
                        </div>

                        <div class="window-body">
                            <div class="emails">
                                <!-- Email 1 - Action Needed -->
                                <div class="email email-1">
                                    <div class="avatar avatar-teal">S</div>
                                    <div class="email-content">
                                        <div class="email-top">
                                            <span
                                                class="email-from email-from-strong"
                                                >Sarah Chen</span
                                            >
                                            <span class="pill pill-red"
                                                >Action Needed</span
                                            >
                                            <span class="email-time"
                                                >2:34 PM</span
                                            >
                                        </div>
                                        <div
                                            class="email-subject email-subject-strong"
                                        >
                                            Q4 Budget Review Request
                                        </div>
                                        <div class="email-preview">
                                            The finalized numbers are attached.
                                            Please review by EOD.
                                        </div>
                                    </div>
                                </div>

                                <!-- Email 2 - Meeting -->
                                <div class="email email-2">
                                    <div class="avatar avatar-blue">M</div>
                                    <div class="email-content">
                                        <div class="email-top">
                                            <span class="email-from"
                                                >Michael Torres</span
                                            >
                                            <span class="pill pill-blue"
                                                >Meeting</span
                                            >
                                            <span
                                                class="email-time email-time-dim"
                                                >11:05 AM</span
                                            >
                                        </div>
                                        <div class="email-subject">
                                            Team standup tomorrow at 10am
                                        </div>
                                    </div>
                                </div>

                                <!-- Email 3 - FYI -->
                                <div class="email email-3">
                                    <div class="avatar avatar-purple">D</div>
                                    <div class="email-content">
                                        <div class="email-top">
                                            <span
                                                class="email-from email-from-dim"
                                                >Design Team</span
                                            >
                                            <span class="pill pill-amber"
                                                >FYI</span
                                            >
                                            <span
                                                class="email-time email-time-dim"
                                                >9:22 AM</span
                                            >
                                        </div>
                                        <div
                                            class="email-subject email-subject-dim"
                                        >
                                            New brand guidelines published
                                        </div>
                                    </div>
                                </div>

                                <!-- Email 4 - Promotions -->
                                <div class="email email-4">
                                    <div class="avatar avatar-icon">
                                        <svg
                                            width="14"
                                            height="14"
                                            viewBox="0 0 24 24"
                                            fill="none"
                                            stroke="currentColor"
                                            stroke-width="2"
                                            ><path
                                                d="M20.24 12.24a6 6 0 0 0-8.49-8.49L5 10.5V19h8.5z"
                                            ></path><line
                                                x1="16"
                                                y1="8"
                                                x2="2"
                                                y2="22"></line><line
                                                x1="17.5"
                                                y1="15"
                                                x2="9"
                                                y2="15"></line></svg
                                        >
                                    </div>
                                    <div class="email-content">
                                        <div class="email-top">
                                            <span
                                                class="email-from email-from-faint"
                                                >Stripe</span
                                            >
                                            <span class="pill pill-lavender"
                                                >Promotions</span
                                            >
                                            <span
                                                class="email-time email-time-faint"
                                                >Yesterday</span
                                            >
                                        </div>
                                        <div
                                            class="email-subject email-subject-faint"
                                        >
                                            Your monthly statement is ready
                                        </div>
                                    </div>
                                </div>

                                <!-- Email 5 - Promotions -->
                                <div class="email email-5">
                                    <div class="avatar avatar-icon">
                                        <svg
                                            width="14"
                                            height="14"
                                            viewBox="0 0 24 24"
                                            fill="none"
                                            stroke="currentColor"
                                            stroke-width="2"
                                            ><rect
                                                x="3"
                                                y="3"
                                                width="18"
                                                height="18"
                                                rx="2"
                                                ry="2"></rect><line
                                                x1="3"
                                                y1="9"
                                                x2="21"
                                                y2="9"></line><line
                                                x1="9"
                                                y1="21"
                                                x2="9"
                                                y2="9"></line></svg
                                        >
                                    </div>
                                    <div class="email-content">
                                        <div class="email-top">
                                            <span
                                                class="email-from email-from-ghost"
                                                >Newsletter</span
                                            >
                                            <span class="pill pill-lavender"
                                                >Promotions</span
                                            >
                                            <span
                                                class="email-time email-time-ghost"
                                                >Dec 20</span
                                            >
                                        </div>
                                        <div
                                            class="email-subject email-subject-ghost"
                                        >
                                            Weekly digest
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .categorization-showcase {
        position: relative;
        padding: 80px 24px;
        overflow: hidden;
    }

    .categorization-showcase:first-child {
        padding-top: 0;
    }

    .feature-badge {
        display: inline-flex;
        align-items: center;
        gap: 12px;
        padding: 10px 20px 10px 16px;
        background: linear-gradient(135deg, rgba(59, 130, 246, 0.08) 0%, rgba(139, 92, 246, 0.08) 100%);
        border: 1px solid rgba(59, 130, 246, 0.2);
        border-radius: 12px;
        margin-bottom: 20px;
        opacity: 0;
        transform: translateY(-10px);
        transition: opacity 0.6s ease 0.3s, transform 0.6s ease 0.3s;
    }

    .in-view .feature-badge {
        opacity: 1;
        transform: translateY(0);
    }

    .badge-ornament {
        display: flex;
        align-items: center;
        justify-content: center;
        color: rgba(59, 130, 246, 0.6);
    }

    .badge-text {
        font-family: var(--font-sans);
        font-size: 13px;
        font-weight: 600;
        letter-spacing: 0.05em;
        color: rgba(59, 130, 246, 0.9);
    }

    :global(html[data-theme="light"]) .feature-badge {
        background: linear-gradient(135deg, rgba(37, 99, 235, 0.06) 0%, rgba(124, 58, 237, 0.06) 100%);
        border-color: rgba(37, 99, 235, 0.25);
    }

    :global(html[data-theme="light"]) .badge-ornament {
        color: rgba(37, 99, 235, 0.7);
    }

    :global(html[data-theme="light"]) .badge-text {
        color: rgba(37, 99, 235, 1);
    }

    .editorial-divider {
        max-width: 1200px;
        margin: 0 auto 60px;
        border-top: 1px solid var(--duet-border-editorial);
        padding-top: 24px;
        display: flex;
        justify-content: flex-start;
    }

    /* When first in container, remove top border for cleaner look */
    .categorization-showcase:first-child .editorial-divider {
        border-top: none;
        padding-top: 0;
    }

    .feature-label {
        font-family: var(--font-sans);
        font-size: 11px;
        font-weight: 600;
        letter-spacing: 0.1em;
        text-transform: uppercase;
        color: var(--duet-muted);
    }

    .categorization-container {
        max-width: 1200px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: 1fr;
        gap: 64px;
    }

    @media (min-width: 1024px) {
        .categorization-container {
            grid-template-columns: 350px 1fr;
            align-items: start;
        }
    }

    .categorization-header {
        text-align: left;
        position: sticky;
        top: 120px;
    }

    .categorization-title {
        margin: 0 0 24px;
        font-family: var(--font-serif);
        font-size: 42px;
        font-weight: 500;
        line-height: 1.1;
        letter-spacing: -0.02em;
        text-wrap: balance;
        color: var(--prose-heading);
    }

    .categorization-subtitle {
        margin: 0;
        font-family: var(--font-sans);
        font-size: 16px;
        font-weight: 400;
        line-height: 1.7;
        line-height: 1.7;
        color: var(--prose-text);
        max-width: 320px;
    }

    /* Inbox Mockup */
    .inbox-mockup {
        width: 100%;
        position: relative;
        display: flex;
        justify-content: center;
        font-family:
            -apple-system, BlinkMacSystemFont, "SF Pro Display", system-ui,
            sans-serif;
    }

    .window-wrapper {
        position: relative;
        width: 100%;
        max-width: 600px;
        z-index: 1;
    }

    /* Window */
    .window {
        width: 100%;
        background: var(--mockup-window-bg);
        border-radius: 16px;
        border: 1px solid var(--mockup-border);
        box-shadow: var(--mockup-shadow);
        overflow: hidden;
        position: relative;
        opacity: 0;
        transform: translateY(30px);
        transition:
            opacity 0.9s cubic-bezier(0.23, 1, 0.32, 1),
            transform 0.9s cubic-bezier(0.23, 1, 0.32, 1);
    }

    @media (max-width: 1199px) {
        .window {
            border-radius: 12px;
        }
    }

    @media (max-width: 809px) {
        .window {
            border-radius: 10px;
        }
    }

    .in-view .window {
        opacity: 1;
        transform: translateY(0);
    }

    /* Window Header */
    .window-header {
        height: 52px;
        background: transparent;
        border-bottom: 1px solid var(--mockup-border);
        display: flex;
        align-items: center;
        padding: 0 20px;
        color: var(--duet-muted);
    }

    .traffic {
        display: flex;
        gap: 8px;
    }

    .traffic-dot {
        width: 10px;
        height: 10px;
        border-radius: 9999px;
        opacity: 0.6;
    }

    .traffic-red {
        background: #ff5f57;
    }
    .traffic-yellow {
        background: #ffbd2e;
    }
    .traffic-green {
        background: #28c840;
    }

    .window-title {
        margin-left: 18px;
        font-size: 13px;
        font-weight: 500;
        letter-spacing: -0.01em;
    }

    .window-badge {
        margin-left: auto;
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 12px;
        font-weight: 500;
        color: var(--duet-muted);
    }

    /* Emails */
    .emails {
        flex: 1;
        min-height: 0;
        display: flex;
        flex-direction: column;
    }

    .email {
        display: flex;
        gap: 16px;
        padding: 16px 20px;
        border-bottom: 1px solid var(--email-border);
        opacity: 0;
        transform: translateY(20px);
        transition:
            opacity 0.7s cubic-bezier(0.23, 1, 0.32, 1) var(--delay),
            transform 0.7s cubic-bezier(0.23, 1, 0.32, 1) var(--delay);
    }

    .in-view .email {
        opacity: var(--final-opacity);
        transform: translateY(0);
    }

    .email-1 {
        --delay: 0.3s;
        --final-opacity: 1;
        background: var(--email-bg-1);
    }
    .email-2 {
        --delay: 0.5s;
        --final-opacity: 0.8;
    }
    .email-3 {
        --delay: 0.7s;
        --final-opacity: 0.6;
    }
    .email-4 {
        --delay: 0.9s;
        --final-opacity: 0.4;
    }
    .email-5 {
        --delay: 1.1s;
        --final-opacity: 0.2;
    }

    /* Avatars */
    .avatar {
        width: 32px;
        height: 32px;
        border-radius: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 13px;
        font-weight: 600;
        color: white;
        flex-shrink: 0;
    }

    .avatar-teal {
        background: #14b8a6;
    }
    .avatar-blue {
        background: #3b82f6;
    }
    .avatar-purple {
        background: #8b5cf6;
    }
    .avatar-icon {
        background: rgba(255, 255, 255, 0.1);
        color: #a1a1aa;
    }

    /* Email Content */
    .email-content {
        flex: 1;
        min-width: 0;
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 2px;
    }

    .email-top {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .email-from {
        font-size: 13px;
        font-weight: 500;
        color: var(--duet-muted);
    }
    .email-from-strong {
        color: var(--duet-fg);
        font-weight: 600;
    }

    .email-time {
        margin-left: auto;
        font-size: 12px;
        color: var(--duet-muted);
    }

    .email-subject {
        font-size: 13px;
        color: var(--duet-muted);
    }
    .email-subject-strong {
        color: var(--duet-fg);
    }

    .email-preview {
        font-size: 12px;
        color: var(--duet-muted);
        margin-top: 2px;
        display: -webkit-box;
        -webkit-line-clamp: 1;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    /* Pills - with staged animation */
    .pill {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 10px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        padding: 4px 10px;
        border-radius: 8px;
        line-height: 1;
        white-space: nowrap;
        opacity: 0;
        transform: scale(0);
        filter: blur(4px);
        transition:
            opacity 0.5s cubic-bezier(0.23, 1, 0.32, 1) var(--pill-delay, 2s),
            transform 0.5s cubic-bezier(0.23, 1, 0.32, 1) var(--pill-delay, 2s),
            filter 0.5s cubic-bezier(0.23, 1, 0.32, 1) var(--pill-delay, 2s);
    }

    .in-view .pill {
        opacity: 1;
        transform: scale(1);
        filter: blur(0);
    }

    .pill-red {
        --pill-delay: 2s;
        --pill-glow-color: rgba(239, 68, 68, 0.25);
        --pill-glow-color-intense: rgba(239, 68, 68, 0.5);
        background: rgba(239, 68, 68, 0.15);
        color: #fca5a5;
    }

    :global(html[data-theme="light"]) .pill-red {
        --pill-glow-color: rgba(220, 38, 38, 0.2);
        --pill-glow-color-intense: rgba(220, 38, 38, 0.4);
        background: rgba(220, 38, 38, 0.12);
        color: #dc2626;
    }

    .in-view .pill-red {
        animation: pillGlow 0.8s ease-in-out 2.7s 1;
    }

    .pill-blue {
        --pill-delay: 2.35s;
        background: rgba(59, 130, 246, 0.15);
        color: #93c5fd;
    }

    :global(html[data-theme="light"]) .pill-blue {
        background: rgba(37, 99, 235, 0.12);
        color: #2563eb;
    }

    .pill-amber {
        --pill-delay: 2.7s;
        background: rgba(212, 174, 94, 0.15);
        color: #fcd34d;
    }

    :global(html[data-theme="light"]) .pill-amber {
        background: rgba(180, 130, 20, 0.12);
        color: #b45309;
    }

    .pill-lavender {
        --pill-delay: 3.05s;
        background: rgba(167, 139, 250, 0.15);
        color: #c4b5fd;
    }

    :global(html[data-theme="light"]) .pill-lavender {
        background: rgba(124, 58, 237, 0.12);
        color: #7c3aed;
    }

    .email-5 .pill-lavender {
        --pill-delay: 3.4s;
    }

    /* Keyframes */
    @keyframes pillGlow {
        0%,
        100% {
            box-shadow: 0 2px 10px var(--pill-glow-color, rgba(239, 68, 68, 0.25));
        }
        50% {
            box-shadow: 0 2px 20px var(--pill-glow-color-intense, rgba(239, 68, 68, 0.5));
        }
    }

    /* Reduced Motion */
    @media (prefers-reduced-motion: reduce) {
        .window {
            opacity: 1 !important;
            transform: none !important;
            transition: none !important;
        }

        .email {
            opacity: var(--final-opacity) !important;
            transform: none !important;
            transition: none !important;
        }

        .pill {
            opacity: 1 !important;
            transform: none !important;
            filter: none !important;
            transition: none !important;
            animation: none !important;
        }

        .in-view .pill-red {
            animation: none !important;
        }
    }
</style>

<script>
    const section = document.querySelector("[data-categorization-section]");
    if (section) {
        const prefersReducedMotion = window.matchMedia(
            "(prefers-reduced-motion: reduce)",
        ).matches;

        if (prefersReducedMotion) {
            section.classList.add("in-view");
        } else {
            const observer = new IntersectionObserver(
                (entries) => {
                    entries.forEach((entry) => {
                        if (entry.isIntersecting) {
                            entry.target.classList.add("in-view");
                            observer.unobserve(entry.target);
                        }
                    });
                },
                { threshold: 0.3 },
            );
            observer.observe(section);
        }
    }
</script>
