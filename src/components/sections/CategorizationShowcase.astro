                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .categorization-showcase {
        padding: 96px 0 120px;
        position: relative;
        overflow: hidden;
    }

    @media (max-width: 809px) {
        .categorization-showcase {
            padding: 64px 0 80px;
        }
    }

    .categorization-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 24px;
    }

    @media (max-width: 809px) {
        .categorization-container {
            padding: 0 16px;
        }
    }

    .categorization-header {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        gap: 16px;
        margin-bottom: 56px;
    }

    @media (max-width: 809px) {
        .categorization-header {
            margin-bottom: 40px;
        }
    }

    .categorization-title {
        margin: 0;
        font-family:
            "Domine Variable", ui-serif, Georgia, Cambria, "Times New Roman",
            Times, serif;
        font-size: 48px;
        font-weight: 500;
        line-height: 1.1;
        letter-spacing: -0.02em;
        color: #ffffff;
        text-wrap: balance;
    }

    @media (max-width: 1199px) {
        .categorization-title {
            font-size: 40px;
        }
    }

    @media (max-width: 809px) {
        .categorization-title {
            font-size: 32px;
        }
    }

    .categorization-subtitle {
        margin: 0;
        font-family:
            "Manrope Variable",
            ui-sans-serif,
            system-ui,
            -apple-system,
            BlinkMacSystemFont,
            "Segoe UI",
            Roboto,
            Helvetica,
            Arial,
            sans-serif;
        font-size: 18px;
        font-weight: 400;
        line-height: 1.6;
        color: rgb(161, 161, 170);
        max-width: 540px;
        text-wrap: pretty;
    }

    @media (max-width: 809px) {
        .categorization-subtitle {
            font-size: 16px;
        }
    }

    /* Inbox Mockup */
    .inbox-mockup {
        width: 100%;
        position: relative;
        display: flex;
        justify-content: center;
        font-family:
            -apple-system, BlinkMacSystemFont, "SF Pro Display", system-ui,
            sans-serif;
        contain: layout style;
    }

    .ambient-glow {
        position: absolute;
        top: 10%;
        left: 50%;
        transform: translateX(-50%);
        width: 80%;
        height: 70%;
        background: radial-gradient(
            ellipse 100% 80% at 50% 50%,
            rgba(69, 48, 234, 0.12) 0%,
            rgba(116, 194, 255, 0.06) 40%,
            transparent 70%
        );
        filter: blur(60px);
        z-index: 0;
        pointer-events: none;
    }

    .window-wrapper {
        position: relative;
        width: 100%;
        max-width: 720px;
        margin: 0 auto;
        z-index: 1;
    }

    @media (max-width: 809px) {
        .window-wrapper {
            max-width: 100%;
        }
    }

    .window-frame {
        position: relative;
    }

    /* Luminous Frame Effect */
    .luminous-frame {
        position: absolute;
        inset: -12px;
        border-radius: 28px;
        pointer-events: none;
        z-index: 0;
        opacity: 0;
        transition: opacity 1s ease-out 0.3s;
    }

    .in-view .luminous-frame {
        opacity: 1;
    }

    @media (max-width: 1199px) {
        .luminous-frame {
            inset: -10px;
            border-radius: 24px;
        }
    }

    @media (max-width: 809px) {
        .luminous-frame {
            inset: -8px;
            border-radius: 18px;
        }
    }

    .luminous-border {
        position: absolute;
        inset: 0;
        border-radius: inherit;
        padding: 1.5px;
        background: linear-gradient(
            135deg,
            rgba(116, 194, 255, 0.6) 0%,
            rgba(69, 48, 234, 0.7) 25%,
            rgba(116, 194, 255, 0.5) 50%,
            rgba(69, 48, 234, 0.7) 75%,
            rgba(116, 194, 255, 0.6) 100%
        );
        -webkit-mask:
            linear-gradient(#fff 0 0) content-box,
            linear-gradient(#fff 0 0);
        -webkit-mask-composite: xor;
        mask-composite: exclude;
        opacity: 0.5;
        will-change: opacity;
        animation: frameBorderPulse 6s ease-in-out infinite;
    }

    .luminous-glow {
        position: absolute;
        inset: -6px;
        border-radius: 34px;
        background: transparent;
        box-shadow:
            0 0 30px 6px rgba(69, 48, 234, 0.2),
            0 0 60px 12px rgba(116, 194, 255, 0.1),
            inset 0 0 30px 6px rgba(69, 48, 234, 0.08);
        opacity: 0.4;
        will-change: opacity;
        animation: frameGlowPulse 6s ease-in-out 0.5s infinite;
    }

    @media (max-width: 809px) {
        .luminous-glow {
            border-radius: 24px;
        }
    }

    .luminous-corner {
        position: absolute;
        width: 80px;
        height: 80px;
        border-radius: inherit;
        opacity: 0.5;
        will-change: opacity;
        animation: cornerPulse 5s ease-in-out infinite;
    }

    @media (max-width: 809px) {
        .luminous-corner {
            width: 50px;
            height: 50px;
        }
    }

    .luminous-corner-tl {
        top: -4px;
        left: -4px;
        background: radial-gradient(
            ellipse at 0% 0%,
            rgba(116, 194, 255, 0.5) 0%,
            transparent 70%
        );
        animation-delay: 0s;
    }

    .luminous-corner-br {
        bottom: -4px;
        right: -4px;
        background: radial-gradient(
            ellipse at 100% 100%,
            rgba(69, 48, 234, 0.6) 0%,
            transparent 70%
        );
        animation-delay: 2.5s;
    }

    /* Window */
    .window {
        width: 100%;
        background: linear-gradient(
            180deg,
            rgba(28, 28, 32, 0.96) 0%,
            rgba(18, 18, 22, 0.98) 100%
        );
        backdrop-filter: blur(40px);
        -webkit-backdrop-filter: blur(40px);
        border-radius: 16px;
        box-shadow:
            0 50px 100px rgba(0, 0, 0, 0.5),
            0 20px 40px rgba(0, 0, 0, 0.35),
            0 0 0 1px rgba(255, 255, 255, 0.08);
        overflow: hidden;
        position: relative;
        z-index: 1;
        opacity: 0;
        transform: translateY(30px);
        transition:
            opacity 0.9s cubic-bezier(0.23, 1, 0.32, 1),
            transform 0.9s cubic-bezier(0.23, 1, 0.32, 1);
    }

    .in-view .window {
        opacity: 1;
        transform: translateY(0);
    }

    @media (max-width: 1199px) {
        .window {
            border-radius: 14px;
        }
    }

    @media (max-width: 809px) {
        .window {
            border-radius: 10px;
            box-shadow:
                0 30px 60px rgba(0, 0, 0, 0.4),
                0 0 0 1px rgba(255, 255, 255, 0.08);
        }
    }

    .window-highlight {
        position: absolute;
        top: 0;
        left: 10%;
        right: 10%;
        height: 1px;
        background: linear-gradient(
            90deg,
            transparent,
            rgba(255, 255, 255, 0.15),
            transparent
        );
        pointer-events: none;
    }

    /* Window Header */
    .window-header {
        height: 52px;
        background: rgba(255, 255, 255, 0.025);
        border-bottom: 1px solid rgba(255, 255, 255, 0.06);
        display: flex;
        align-items: center;
        padding: 0 20px;
        position: relative;
        color: #71717a;
    }

    @media (max-width: 1199px) {
        .window-header {
            height: 46px;
            padding: 0 16px;
        }
    }

    @media (max-width: 809px) {
        .window-header {
            height: 40px;
            padding: 0 12px;
        }
    }

    .traffic {
        display: flex;
        gap: 8px;
    }

    @media (max-width: 809px) {
        .traffic {
            gap: 6px;
        }
    }

    .traffic-dot {
        width: 12px;
        height: 12px;
        border-radius: 9999px;
        box-shadow: inset 0 -1px 2px rgba(0, 0, 0, 0.2);
    }

    @media (max-width: 809px) {
        .traffic-dot {
            width: 10px;
            height: 10px;
        }
    }

    .traffic-red {
        background: linear-gradient(135deg, #ff6b6b 0%, #ee5a5a 100%);
    }

    .traffic-yellow {
        background: linear-gradient(135deg, #ffd93d 0%, #f5c842 100%);
    }

    .traffic-green {
        background: linear-gradient(135deg, #6bcb77 0%, #5cb868 100%);
    }

    .window-title {
        margin-left: 18px;
        font-size: 13px;
        font-weight: 500;
        letter-spacing: -0.01em;
    }

    @media (max-width: 809px) {
        .window-title {
            margin-left: 12px;
            font-size: 12px;
        }
    }

    .window-badge {
        margin-left: auto;
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 13px;
        font-weight: 500;
        letter-spacing: -0.01em;
        color: #71717a;
    }

    @media (max-width: 809px) {
        .window-badge {
            gap: 5px;
            font-size: 11px;
        }
    }

    .gmail-icon {
        width: 20px;
        height: 16px;
    }

    @media (max-width: 809px) {
        .gmail-icon {
            width: 16px;
            height: 13px;
        }
    }

    /* Window Body */
    .window-body {
        display: flex;
        min-height: 340px;
        overflow: hidden;
    }

    @media (max-width: 809px) {
        .window-body {
            min-height: 290px;
        }
    }

    /* Emails */
    .emails {
        flex: 1;
        min-height: 0;
        display: flex;
        flex-direction: column;
        overflow: hidden;
    }

    .email {
        --delay: 0.3s;
        --final-opacity: 1;
        display: flex;
        gap: 14px;
        padding: 18px 22px;
        opacity: 0;
        transform: translateY(20px);
        transition:
            opacity 0.7s cubic-bezier(0.23, 1, 0.32, 1) var(--delay),
            transform 0.7s cubic-bezier(0.23, 1, 0.32, 1) var(--delay);
    }

    .in-view .email {
        opacity: var(--final-opacity);
        transform: translateY(0);
    }

    @media (max-width: 809px) {
        .email {
            gap: 10px;
            padding: 14px 16px;
        }
    }

    .email-1 {
        --delay: 0.3s;
        --final-opacity: 1;
        background: rgba(69, 48, 234, 0.06);
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    }

    .email-2 {
        --delay: 0.55s;
        --final-opacity: 0.75;
        border-bottom: 1px solid rgba(255, 255, 255, 0.04);
    }

    .email-3 {
        --delay: 0.8s;
        --final-opacity: 0.55;
        border-bottom: 1px solid rgba(255, 255, 255, 0.03);
    }

    .email-4 {
        --delay: 1.05s;
        --final-opacity: 0.35;
        border-bottom: 1px solid rgba(255, 255, 255, 0.02);
    }

    .email-5 {
        --delay: 1.3s;
        --final-opacity: 0.2;
    }

    /* Avatars */
    .avatar {
        width: 40px;
        height: 40px;
        border-radius: 9999px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 15px;
        font-weight: 600;
        color: white;
        flex-shrink: 0;
    }

    @media (max-width: 809px) {
        .avatar {
            width: 32px;
            height: 32px;
            font-size: 12px;
        }
    }

    .avatar-teal {
        background: linear-gradient(135deg, #2dd4bf 0%, #14b8a6 100%);
        box-shadow: 0 4px 12px rgba(45, 212, 191, 0.25);
    }

    .avatar-blue {
        background: linear-gradient(135deg, #60a5fa 0%, #3b82f6 100%);
    }

    .avatar-purple {
        background: linear-gradient(135deg, #a78bfa 0%, #8b5cf6 100%);
    }

    .avatar-green {
        background: linear-gradient(135deg, #4ade80 0%, #22c55e 100%);
    }

    .avatar-lavender {
        background: linear-gradient(135deg, #c4b5fd 0%, #a78bfa 100%);
        width: 34px;
        height: 34px;
        font-size: 13px;
    }

    @media (max-width: 809px) {
        .avatar-lavender {
            width: 28px;
            height: 28px;
            font-size: 10px;
        }
    }

    /* Email Content */
    .email-content {
        flex: 1;
        min-width: 0;
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 4px;
    }

    .email-top {
        display: flex;
        align-items: center;
        gap: 12px;
        flex-wrap: wrap;
    }

    @media (max-width: 809px) {
        .email-top {
            gap: 8px;
        }
    }

    .email-from {
        font-size: 14px;
        font-weight: 500;
        color: #a1a1aa;
        letter-spacing: -0.01em;
    }

    .email-from-strong {
        font-size: 15px;
        font-weight: 600;
        color: #fafafa;
    }

    .email-from-dim {
        font-size: 13px;
        color: #71717a;
    }

    .email-from-faint {
        font-size: 12px;
        color: #52525b;
    }

    .email-from-ghost {
        font-size: 11px;
        color: #3f3f46;
    }

    @media (max-width: 809px) {
        .email-from {
            font-size: 12px;
        }

        .email-from-strong {
            font-size: 13px;
        }

        .email-from-dim {
            font-size: 11px;
        }

        .email-from-faint {
            font-size: 10px;
        }

        .email-from-ghost {
            font-size: 9px;
        }
    }

    .email-subject {
        font-size: 13px;
        font-weight: 500;
        color: #a1a1aa;
        letter-spacing: -0.01em;
    }

    .email-subject-strong {
        font-size: 14px;
        color: #e4e4e7;
    }

    .email-subject-dim {
        font-size: 12px;
        color: #71717a;
    }

    .email-subject-faint {
        font-size: 11px;
        color: #52525b;
    }

    .email-subject-ghost {
        font-size: 10px;
        color: #3f3f46;
    }

    @media (max-width: 809px) {
        .email-subject {
            font-size: 11px;
        }

        .email-subject-strong {
            font-size: 12px;
        }

        .email-subject-dim {
            font-size: 10px;
        }

        .email-subject-faint {
            font-size: 9px;
        }

        .email-subject-ghost {
            font-size: 8px;
        }
    }

    .email-time {
        margin-left: auto;
        font-size: 12px;
        font-weight: 500;
        color: #71717a;
        white-space: nowrap;
    }

    .email-time-dim {
        color: #52525b;
    }

    .email-time-faint {
        font-size: 11px;
        color: #3f3f46;
    }

    .email-time-ghost {
        font-size: 10px;
        color: #27272a;
    }

    @media (max-width: 809px) {
        .email-time {
            font-size: 10px;
        }

        .email-time-faint {
            font-size: 9px;
        }

        .email-time-ghost {
            font-size: 8px;
        }
    }

    /* Pills */
    .pill {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 10px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        padding: 4px 10px;
        border-radius: 6px;
        line-height: 1;
        white-space: nowrap;
        opacity: 0;
        transform: scale(0);
        filter: blur(4px);
        transition:
            opacity 0.5s cubic-bezier(0.23, 1, 0.32, 1) var(--pill-delay, 2s),
            transform 0.5s cubic-bezier(0.23, 1, 0.32, 1) var(--pill-delay, 2s),
            filter 0.5s cubic-bezier(0.23, 1, 0.32, 1) var(--pill-delay, 2s);
    }

    .in-view .pill {
        opacity: 1;
        transform: scale(1);
        filter: blur(0);
    }

    @media (max-width: 809px) {
        .pill {
            font-size: 8px;
            padding: 3px 7px;
            border-radius: 4px;
        }
    }

    .pill-red {
        --pill-delay: 2s;
        background: linear-gradient(135deg, #f87171 0%, #ef4444 100%);
        color: white;
        box-shadow: 0 2px 10px rgba(248, 113, 113, 0.25);
    }

    .in-view .pill-red {
        animation: pillGlow 0.8s ease-in-out 2.7s 1;
    }

    .pill-blue {
        --pill-delay: 2.35s;
        background: rgba(59, 130, 246, 0.14);
        color: #60a5fa;
        border: 1px solid rgba(59, 130, 246, 0.25);
        font-weight: 500;
        letter-spacing: 0.04em;
    }

