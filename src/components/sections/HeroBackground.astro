---
const focalPointY = 400
const particles = [
    { bottom: 65, left: 12, duration: 7.2, delay: 0, travel: 95, opacity: 0.95, size: 3.5 },
    { bottom: 180, left: 28, duration: 6.5, delay: 0.6, travel: 88, opacity: 0.65, size: 2 },
    { bottom: 100, left: 45, duration: 8.1, delay: 1.2, travel: 105, opacity: 0.85, size: 3 },
    { bottom: 220, left: 62, duration: 6.8, delay: 1.8, travel: 92, opacity: 1.0, size: 4 },
    { bottom: 45, left: 78, duration: 7.5, delay: 2.4, travel: 98, opacity: 0.7, size: 2.5 },
    { bottom: 165, left: 88, duration: 6.2, delay: 3.0, travel: 85, opacity: 0.9, size: 3.5 },
    { bottom: 140, left: 22, duration: 7.8, delay: 3.6, travel: 102, opacity: 0.6, size: 2 },
    { bottom: 200, left: 52, duration: 6.9, delay: 4.2, travel: 90, opacity: 0.98, size: 4 },
    { bottom: 55, left: 35, duration: 7.3, delay: 4.8, travel: 96, opacity: 0.75, size: 2.5 },
    { bottom: 175, left: 70, duration: 8.0, delay: 5.4, travel: 100, opacity: 0.88, size: 3 },
    { bottom: 40, left: 15, duration: 6.6, delay: 6.0, travel: 87, opacity: 0.68, size: 2 },
    { bottom: 190, left: 82, duration: 7.1, delay: 6.6, travel: 94, opacity: 0.82, size: 3 },
]

const noiseDataUrl =
    "data:image/svg+xml,%3Csvg viewBox='0 0 512 512' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.7' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E"
---

<div class="hero-bg pointer-events-none absolute inset-0 overflow-hidden">
    <div
        aria-hidden="true"
        class="absolute inset-0"
        style={`background: radial-gradient(ellipse 140% 100% at 50% ${focalPointY}px, rgba(18, 16, 35, 1) 0%, rgba(12, 11, 28, 1) 40%, rgba(8, 8, 26, 1) 100%);`}
    ></div>

    <div
        aria-hidden="true"
        class="glow absolute left-1/2"
        data-animate
        style={`top: ${focalPointY - 350}px; width: 900px; height: 700px; background: radial-gradient(ellipse 100% 80% at 50% 55%, rgba(69, 48, 234, 0.3) 0%, rgba(69, 48, 234, 0.15) 35%, rgba(52, 39, 234, 0.05) 60%, transparent 80%); filter: blur(35px); animation: glowPulse1 10s ease-in-out infinite;`}
    ></div>

    <div
        aria-hidden="true"
        class="glow absolute left-1/2"
        data-animate
        style={`top: ${focalPointY - 250}px; width: 700px; height: 500px; background: radial-gradient(ellipse 90% 70% at 50% 50%, rgba(116, 194, 255, 0.2) 0%, rgba(116, 194, 255, 0.08) 45%, transparent 70%); filter: blur(40px); animation: glowPulse2 12s ease-in-out infinite;`}
    ></div>

    <div
        aria-hidden="true"
        class="glow absolute left-1/2"
        data-animate
        style={`top: ${focalPointY - 150}px; width: 600px; height: 400px; transform: translateX(-50%); background: radial-gradient(ellipse 100% 80% at 50% 60%, rgba(147, 130, 255, 0.15) 0%, rgba(180, 160, 255, 0.06) 50%, transparent 70%); filter: blur(30px); opacity: 0.25; animation: glowPulse3 15s ease-in-out 2s infinite; will-change: opacity;`}
    ></div>

    <div
        aria-hidden="true"
        class="glow absolute left-[6%]"
        data-animate
        style={`top: ${focalPointY - 80}px; width: 350px; height: 350px; background: radial-gradient(circle at center, rgba(69, 48, 234, 0.22) 0%, rgba(69, 48, 234, 0.08) 45%, transparent 70%); filter: blur(25px); animation: glowPulse4 14s ease-in-out infinite;`}
    ></div>

    <div
        aria-hidden="true"
        class="glow absolute right-[8%]"
        data-animate
        style={`top: ${focalPointY - 30}px; width: 300px; height: 300px; background: radial-gradient(circle at center, rgba(116, 194, 255, 0.18) 0%, rgba(116, 194, 255, 0.06) 50%, transparent 70%); filter: blur(22px); opacity: 0.3; animation: glowPulse5 16s ease-in-out 3s infinite;`}
    ></div>

    <div
        aria-hidden="true"
        class="absolute inset-0"
        style={`background-image: linear-gradient(rgba(116, 194, 255, 0.012) 1px, transparent 1px), linear-gradient(90deg, rgba(116, 194, 255, 0.012) 1px, transparent 1px); background-size: 80px 80px; mask-image: radial-gradient(ellipse 55% 45% at 50% ${focalPointY}px, rgba(0, 0, 0, 0.5) 0%, transparent 70%); -webkit-mask-image: radial-gradient(ellipse 55% 45% at 50% ${focalPointY}px, rgba(0, 0, 0, 0.5) 0%, transparent 70%);`}
    ></div>

    <div
        aria-hidden="true"
        class="absolute inset-0"
        style={`opacity: 0.025; background-image: url(\"${noiseDataUrl}\"); mix-blend-mode: overlay;`}
    ></div>

    <div
        aria-hidden="true"
        class="absolute left-0 right-0 top-0 h-[220px]"
        style="background: linear-gradient(180deg, rgba(8, 8, 26, 0.95) 0%, rgba(8, 8, 26, 0.5) 50%, transparent 100%);"
    ></div>

    <div
        aria-hidden="true"
        class="absolute bottom-0 left-0 right-0 h-[45%]"
        style="background: linear-gradient(180deg, transparent 0%, rgba(8, 8, 26, 0.4) 35%, rgba(8, 8, 26, 0.85) 70%, #08081a 100%);"
    ></div>

    <div
        aria-hidden="true"
        class="absolute inset-0"
        style="background: radial-gradient(ellipse 85% 75% at 50% 45%, transparent 25%, rgba(8, 8, 26, 0.35) 70%, rgba(8, 8, 26, 0.6) 100%);"
    ></div>

    <div
        aria-hidden="true"
        class="absolute left-1/2"
        style={`top: ${focalPointY - 300}px; width: 1200px; height: 600px; transform: translateX(-50%); overflow: hidden;`}
    >
        {particles.map((particle) => (
            <div
                aria-hidden="true"
                class="absolute rounded-full"
                data-animate
                style={`bottom: ${particle.bottom}px; left: ${particle.left}%; width: ${particle.size}px; height: ${particle.size}px; background: rgba(116, 194, 255, ${particle.opacity}); box-shadow: 0 0 ${particle.size * 2.5}px ${particle.size * 0.7}px rgba(116, 194, 255, 0.6); opacity: 0; will-change: transform, opacity; --travel: -${particle.travel}px; animation: particleFloat ${particle.duration}s ease-out ${particle.delay}s infinite;`}
            ></div>
        ))}
    </div>
</div>

<style>
    .hero-bg {
        background: #08081a;
        z-index: -1;
    }

    .glow {
        will-change: transform, opacity;
    }

    @media (prefers-reduced-motion: reduce) {
        [data-animate] {
            animation: none !important;
        }
    }

    @keyframes glowPulse1 {
        0%,
        100% {
            opacity: 0.6;
            transform: translateX(-50%) scale(1);
        }
        50% {
            opacity: 0.75;
            transform: translateX(-50%) scale(1.02);
        }
    }

    @keyframes glowPulse2 {
        0%,
        100% {
            opacity: 0.4;
            transform: translateX(-50%) translateY(-5px);
        }
        50% {
            opacity: 0.55;
            transform: translateX(-50%) translateY(5px);
        }
    }

    @keyframes glowPulse3 {
        0%,
        100% {
            opacity: 0.25;
            transform: translateX(-50%);
        }
        50% {
            opacity: 0.35;
            transform: translateX(-50%);
        }
    }

    @keyframes glowPulse4 {
        0%,
        100% {
            opacity: 0.35;
            transform: translateY(0);
        }
        50% {
            opacity: 0.5;
            transform: translateY(-12px);
        }
    }

    @keyframes glowPulse5 {
        0%,
        100% {
            opacity: 0.3;
            transform: translateY(0);
        }
        50% {
            opacity: 0.45;
            transform: translateY(10px);
        }
    }

    @keyframes particleFloat {
        0% {
            opacity: 0;
            transform: translateY(0);
        }
        15% {
            opacity: 1;
        }
        85% {
            opacity: 1;
        }
        100% {
            opacity: 0;
            transform: translateY(var(--travel));
        }
    }
</style>
