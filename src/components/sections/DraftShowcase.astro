<section
    class="draft-showcase"
    aria-label="AI draft replies"
    data-draft-section
>
    <!-- Editorial Divider -->
    <div class="editorial-divider">
        <span class="feature-label">FEATURE 02 — DRAFTING</span>
    </div>

    <div class="draft-container">
        <!-- Editorial Header -->
        <header class="draft-header">
            <h2 class="draft-title">The Ghostwriter</h2>
            <p class="draft-subtitle">
                Duet drafts replies in your voice, ready to send.
                <br class="hidden md:block" />
                Review, edit, and hit send.
            </p>
        </header>

        <div class="compose-mockup" aria-hidden="true">
            <!-- REMOVED: Ambient glows and particles for cleaner look -->

            <div class="mockup-layout">
                <div class="window-wrapper">
                    <div class="window-frame">
                        <!-- Clean Frame (No luminous glow) -->

                        <div class="window">
                            <div class="window-header">
                                <div class="traffic-lights">
                                    <span class="dot dot-red"></span>
                                    <span class="dot dot-yellow"></span>
                                    <span class="dot dot-green"></span>
                                </div>
                                <span class="window-title">New Message</span>
                                <div class="header-spacer"></div>
                            </div>

                            <div class="compose-body">
                                <!-- Compose fields -->
                                <div class="compose-field">
                                    <span class="field-label">To:</span>
                                    <span class="field-value"
                                        >alex.rivera@techcorp.io</span
                                    >
                                </div>
                                <div class="compose-field">
                                    <span class="field-label">Subject:</span>
                                    <span class="field-value"
                                        >Re: Quick sync this week?</span
                                    >
                                </div>

                                <!-- Original email preview -->
                                <div class="original-preview">
                                    <div class="preview-header">
                                        <span class="preview-label"
                                            >Alex Rivera wrote:</span
                                        >
                                    </div>
                                    <p class="preview-text">
                                        Hey! Would love to catch up on the
                                        roadmap changes. Are you free for a
                                        30-min call this week? Let me know what
                                        works for you.
                                    </p>
                                </div>

                                <!-- AI Draft - hoverable area -->
                                <div class="draft-content">
                                    <div class="duet-badge">
                                        <div class="badge-shimmer"></div>
                                        <!-- Simple clean icon -->
                                        <svg
                                            width="12"
                                            height="12"
                                            viewBox="0 0 24 24"
                                            fill="currentColor"
                                        >
                                            <path
                                                d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"
                                            ></path>
                                        </svg>
                                        <span>Autodrafted</span>
                                    </div>

                                    <div class="draft-text-container">
                                        <p class="draft-line line-1">
                                            <span class="typing-text"
                                                >Hey Alex!</span
                                            >
                                        </p>
                                        <p class="draft-line line-2">
                                            <span class="typing-text"
                                                >Would love to sync on the
                                                roadmap. <span
                                                    class="highlight-text"
                                                    >I'm free Thursday 2-4pm or
                                                    Friday morning</span
                                                > — either works great for me.</span
                                            >
                                        </p>
                                        <p class="draft-line line-3">
                                            <span class="typing-text"
                                                >Let me know what suits you best
                                                and I'll send over an invite.</span
                                            >
                                        </p>
                                        <p
                                            class="draft-line line-4 draft-signature"
                                        >
                                            <span class="typing-text"
                                                >Thanks!&nbsp;&nbsp;</span
                                            >
                                        </p>
                                    </div>
                                </div>

                                <!-- Action buttons -->
                                <div class="compose-actions">
                                    <button class="btn-send">
                                        <svg
                                            width="16"
                                            height="16"
                                            viewBox="0 0 24 24"
                                            fill="currentColor"
                                        >
                                            <path
                                                d="M2 21L23 12L2 3V10L17 12L2 14V21Z"
                                            ></path>
                                        </svg>
                                        Send
                                    </button>
                                    <button class="btn-edit">Edit</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Context tooltip - REFINED -->
                <!-- Context tooltip - REFINED & RESTORED COPY -->
                <div class="context-tooltip">
                    <div class="tooltip-arrow"></div>
                    <div class="tooltip-content">
                        <div class="tooltip-header">
                            <svg
                                width="14"
                                height="14"
                                viewBox="0 0 24 24"
                                fill="currentColor"
                            >
                                <path
                                    d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"
                                ></path>
                            </svg>
                            <span>Personalized Draft</span>
                        </div>
                        <ul class="tooltip-features">
                            <li class="feature-item">
                                <svg
                                    width="12"
                                    height="12"
                                    viewBox="0 0 24 24"
                                    fill="currentColor"
                                >
                                    <path
                                        d="M19 4h-1V2h-2v2H8V2H6v2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 16H5V10h14v10zm0-12H5V6h14v2z"
                                    ></path>
                                </svg>
                                <span>Knows your calendar</span>
                            </li>
                            <li class="feature-item">
                                <svg
                                    width="12"
                                    height="12"
                                    viewBox="0 0 24 24"
                                    fill="currentColor"
                                >
                                    <path
                                        d="M20 2H4c-1.1 0-2 .9-2 2v18l4-4h14c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zm0 14H6l-2 2V4h16v12z"
                                    ></path>
                                </svg>
                                <span>Drafts in your voice</span>
                            </li>
                            <li class="feature-item">
                                <svg
                                    width="12"
                                    height="12"
                                    viewBox="0 0 24 24"
                                    fill="currentColor"
                                >
                                    <path
                                        d="M9 21c0 .55.45 1 1 1h4c.55 0 1-.45 1-1v-1H9v1zm3-19C8.14 2 5 5.14 5 9c0 2.38 1.19 4.47 3 5.74V17c0 .55.45 1 1 1h6c.55 0 1-.45 1-1v-2.26c1.81-1.27 3-3.36 3-5.74 0-3.86-3.14-7-7-7z"
                                    ></path>
                                </svg>
                                <span>Knows context through memory</span>
                            </li>
                            <li class="feature-item">
                                <svg
                                    width="12"
                                    height="12"
                                    viewBox="0 0 24 24"
                                    fill="currentColor"
                                >
                                    <path
                                        d="M16 6l2.29 2.29-4.88 4.88-4-4L2 16.59 3.41 18l6-6 4 4 6.3-6.29L22 12V6h-6z"
                                    ></path>
                                </svg>
                                <span>Learns over time</span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .draft-showcase {
        position: relative;
        padding: 0 24px 120px; /* Removed top padding, handled by divider margin */
        overflow: hidden;
    }

    .editorial-divider {
        max-width: 1200px;
        margin: 0 auto 80px;
        border-top: 1px solid var(--duet-border-editorial);
        padding-top: 24px;
        display: flex;
        justify-content: flex-start;
    }

    .feature-label {
        font-family: var(--font-sans);
        font-size: 11px;
        font-weight: 600;
        letter-spacing: 0.1em;
        text-transform: uppercase;
        color: var(--duet-muted);
    }

    .draft-container {
        max-width: 1200px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: 1fr;
        gap: 64px;
    }

    @media (min-width: 1024px) {
        .draft-container {
            grid-template-columns: 350px 1fr;
            align-items: start;
        }
    }

    .draft-header {
        text-align: left;
        position: sticky;
        top: 120px;
    }

    .draft-title {
        margin: 0 0 24px;
        font-family: var(--font-serif); /* Domine */
        font-size: 42px;
        font-weight: 500;
        line-height: 1.1;
        letter-spacing: -0.02em;
        text-wrap: balance;
        color: var(--prose-heading);
    }

    .draft-subtitle {
        margin: 0;
        font-family: var(--font-sans);
        font-size: 16px;
        font-weight: 400;
        line-height: 1.7;
        color: var(--duet-muted);
        max-width: 320px;
    }

    /* Mockup container */
    .compose-mockup {
        position: relative;
        display: flex;
        justify-content: center;
        /* Padding handled by grid gap */
    }

    /* Window */
    .window {
        position: relative;
        z-index: 1;
        width: 100%;
        max-width: 600px;
        background: var(--mockup-window-bg);
        border-radius: 16px;
        border: 1px solid var(--mockup-border);
        box-shadow: var(--mockup-shadow);
        overflow: hidden;
        opacity: 0;
        transform: translateY(20px);
        transition:
            opacity 0.8s cubic-bezier(0.23, 1, 0.32, 1),
            transform 0.8s cubic-bezier(0.23, 1, 0.32, 1);
    }

    @media (max-width: 1199px) {
        .window {
            border-radius: 12px;
        }
    }

    @media (max-width: 809px) {
        .window {
            border-radius: 10px;
        }
    }

    .in-view .window {
        opacity: 1;
        transform: translateY(0);
    }

    .window-header {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 12px 16px;
        background: transparent;
        border-bottom: 1px solid var(--mockup-border);
    }

    .traffic-lights {
        display: flex;
        gap: 8px;
    }

    .dot {
        width: 10px;
        height: 10px;
        border-radius: 50%;
        opacity: 0.6;
    }

    .dot-red {
        background: #ff5f57;
    }
    .dot-yellow {
        background: #ffbd2e;
    }
    .dot-green {
        background: #28c840;
    }

    .window-title {
        flex: 1;
        text-align: center;
        font-size: 12px;
        font-weight: 500;
        color: var(--duet-muted);
        letter-spacing: 0.02em;
    }

    .header-spacer {
        width: 52px;
    }

    /* Compose body */
    .compose-body {
        padding: 0;
    }

    .compose-field {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 12px 20px;
        border-bottom: 1px solid var(--email-border);
        opacity: 0;
        transform: translateY(10px);
        transition:
            opacity 0.6s ease-out var(--field-delay, 0.3s),
            transform 0.6s ease-out var(--field-delay, 0.3s);
    }
    .compose-field:nth-child(1) {
        --field-delay: 0.5s;
    }
    .compose-field:nth-child(2) {
        --field-delay: 0.65s;
    }

    .in-view .compose-field {
        opacity: 1;
        transform: translateY(0);
    }

    .field-label {
        font-size: 13px;
        font-weight: 500;
        color: var(--duet-muted);
        min-width: 50px;
    }
    .field-value {
        font-size: 14px;
        color: var(--duet-fg);
    }

    /* Original email preview */
    .original-preview {
        margin: 16px 20px;
        padding: 0 0 0 12px;
        border-left: 2px solid var(--duet-border);
        opacity: 0;
        transform: translateY(10px);
        transition:
            opacity 0.6s ease-out 0.8s,
            transform 0.6s ease-out 0.8s;
    }
    .in-view .original-preview {
        opacity: 1;
        transform: translateY(0);
    }

    .preview-header {
        margin-bottom: 4px;
    }
    .preview-label {
        font-size: 11px;
        font-weight: 600;
        color: var(--duet-muted);
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }
    .preview-text {
        font-family: var(--font-sans);
        font-size: 13px;
        line-height: 1.5;
        color: var(--duet-muted);
    }

    /* Draft content */
    .draft-content {
        padding: 0px 24px;
        background: linear-gradient(
            to bottom,
            rgba(255, 255, 255, 0.01),
            transparent
        );
    }

    .duet-badge {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        font-size: 10px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.08em;
        color: #d4ae5e; /* Gold/Bronze accent */
        background: rgba(212, 174, 94, 0.08); /* Subtle gold bg */
        padding: 4px 8px;
        border-radius: 8px;
        margin-bottom: 20px;
        opacity: 0;
        transform: translateY(10px);
        transition:
            opacity 0.5s ease 1.2s,
            transform 0.5s ease 1.2s;
    }
    .in-view .duet-badge {
        opacity: 1;
        transform: translateY(0);
    }

    .badge-shimmer {
        display: none;
    } /* Removed shimmer */

    .draft-text-container {
        font-family: var(--font-serif);
        font-size: 16px;
        line-height: 1.7;
        color: var(--duet-fg);
    }

    .draft-line {
        margin: 0 0 12px;
        opacity: 0;
        transform: translateY(8px);
        transition:
            opacity 0.5s ease var(--line-delay),
            transform 0.5s ease var(--line-delay);
    }
    .line-1 {
        --line-delay: 1.5s;
        --typing-delay: 1.5s;
        --typing-duration: 0.4s;
        --typing-steps: 10;
    }
    .line-2 {
        --line-delay: 1.7s;
        --typing-delay: 1.9s;
        --typing-duration: 1.8s;
        --typing-steps: 60;
    }
    .line-3 {
        --line-delay: 1.9s;
        --typing-delay: 3.7s;
        --typing-duration: 1.2s;
        --typing-steps: 40;
    }
    .line-4 {
        --line-delay: 2.1s;
        --typing-delay: 4.9s;
        --typing-duration: 0.3s;
        --typing-steps: 8;
    }

    .in-view .draft-line {
        opacity: 1;
        transform: translateY(0);
    }

    .typing-text {
        background: linear-gradient(90deg, var(--duet-fg) 50%, transparent 50%);
        background-size: 200% 100%;
        background-position: 100% 0;
        -webkit-background-clip: text;
        background-clip: text;
        -webkit-text-fill-color: transparent;
        animation: draftTypingReveal var(--typing-duration)
            steps(var(--typing-steps), end) var(--typing-delay) forwards;
        animation-play-state: paused;
    }

    .in-view .typing-text {
        animation-play-state: running;
    }

    @keyframes draftTypingReveal {
        to {
            background-position: 0% 0;
        }
    }

    .highlight-text {
        padding: 0 2px;
        border-radius: 2px;
        box-shadow: inset 0 -0.4em 0 rgba(212, 174, 94, 0);
        animation: highlightReveal 0.6s ease 2.6s forwards;
        animation-play-state: paused;
    }

    .in-view .highlight-text {
        animation-play-state: running;
    }

    @keyframes highlightReveal {
        to {
            box-shadow: inset 0 -0.4em 0 rgba(212, 174, 94, 0.3);
        }
    }

    .draft-signature {
        margin-top: 24px;
        color: #a1a1aa;
    }

    /* Actions */
    .compose-actions {
        display: flex;
        gap: 12px;
        padding: 16px 20px;
        border-top: 1px solid rgba(255, 255, 255, 0.06);
    }

    .btn-send {
        background: #d4ae5e; /* Gold button */
        color: #000;
        border: none;
        padding: 8px 24px;
        border-radius: 8px;
        font-size: 13px;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 8px;
        cursor: pointer;
        transition: background 0.2s;
    }
    .btn-send:hover {
        background: #e6c57d;
    }

    .btn-edit {
        background: transparent;
        color: var(--duet-muted);
        border: 1px solid var(--duet-border);
        padding: 8px 16px;
        border-radius: 8px;
        font-size: 13px;
        cursor: pointer;
        transition: all 0.2s;
    }
    .btn-edit:hover {
        border-color: #d4ae5e;
        color: #d4ae5e;
    }

    .context-tooltip {
        position: absolute;
        right: -90px; /* Moved 10px right (was -80px) */
        top: 240px; /* Moved 200px down (was 40px) */
        width: 200px;
        z-index: 10;
        opacity: 0;
        transform: translateX(-10px);
        transition:
            opacity 0.4s ease 2.2s,
            transform 0.4s ease 2.2s;
        pointer-events: none;
    }
    /* Show automatically in view or on hover */
    .in-view .context-tooltip {
        opacity: 1;
        transform: translateX(0);
    }

    /* Hide on mobile/tablet */
    @media (max-width: 1100px) {
        .context-tooltip {
            display: none;
        }
    }

    .tooltip-arrow {
        position: absolute;
        top: 20px;
        left: -5px;
        width: 10px;
        height: 10px;
        background: var(--mockup-window-bg);
        border-left: 1px solid var(--mockup-border);
        border-bottom: 1px solid var(--mockup-border);
        transform: rotate(45deg);
    }

    .tooltip-content {
        background: var(--mockup-window-bg);
        border: 1px solid var(--mockup-border);
        border-radius: 12px;
        padding: 16px;
        box-shadow: var(--mockup-shadow);
    }

    .tooltip-header {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 10px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        color: #d4ae5e;
        margin-bottom: 12px;
        padding-bottom: 8px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .tooltip-features {
        list-style: none;
        margin: 0;
        padding: 0;
    }

    .feature-item {
        display: flex;
        align-items: center;
        gap: 8px;
        margin-bottom: 8px;
        font-size: 13px;
        color: var(--duet-muted);
    }
    .feature-item:last-child {
        margin-bottom: 0;
    }

    .tooltip-header svg {
        color: #d4ae5e;
    }
    .feature-item svg {
        color: #52525b;
        flex-shrink: 0;
    }

    @media (prefers-reduced-motion: reduce) {
        .typing-text {
            animation: none !important;
            background: none !important;
            -webkit-text-fill-color: var(--duet-fg) !important;
        }

        .highlight-text {
            animation: none !important;
            box-shadow: inset 0 -0.4em 0 rgba(212, 174, 94, 0.3) !important;
        }

        .window,
        .compose-field,
        .original-preview,
        .duet-badge,
        .draft-line,
        .context-tooltip {
            transition: none !important;
            opacity: 1 !important;
            transform: none !important;
        }
    }
</style>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        const section = document.querySelector("[data-draft-section]");
        if (!section) return;

        const observer = new IntersectionObserver(
            (entries) => {
                entries.forEach((entry) => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add("in-view");
                        observer.unobserve(entry.target);
                    }
                });
            },
            { threshold: 0.3 },
        );
        observer.observe(section);
    });
</script>
