---
import "../styles/global.css";
import gtmHeadHtml from "../snippets/gtm-head.html?raw";
import gtmNoscriptHtml from "../snippets/gtm-noscript.html?raw";

type Props = {
    title: string;
    description: string;
    canonicalPath: string;
    ogImagePath: string;
    extraHeadHtml?: string;
    ogType?: "website" | "article";
};

const { title, description, canonicalPath, ogImagePath, extraHeadHtml, ogType = "website" } =
    Astro.props;

// Ensure canonical path does NOT have a trailing slash to match Astro's trailingSlash: "never" config
const normalizedPath = (() => {
    if (canonicalPath === "/") return "/";
    return canonicalPath.endsWith("/") ? canonicalPath.slice(0, -1) : canonicalPath;
})();
const canonicalUrl = new URL(normalizedPath, Astro.site).toString();
const ogImageUrl = new URL(ogImagePath, Astro.site).toString();
---

<!doctype html>
<html lang="en-US" data-theme="light">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />

        <Fragment set:html={gtmHeadHtml} />

        <script is:inline>
            (() => {
                const safeLocalStorageGet = (key) => {
                    try {
                        return localStorage.getItem(key);
                    } catch (error) {
                        return null;
                    }
                };

                const getTheme = () => {
                    const storedTheme = safeLocalStorageGet("theme");
                    if (storedTheme === "dark") {
                        return "dark";
                    }

                    // Default to light unless the user explicitly chose dark.
                    return "light";
                };

                const theme = getTheme();
                if (theme === "light") {
                    document.documentElement.setAttribute("data-theme", "light");
                } else {
                    document.documentElement.removeAttribute("data-theme");
                }
            })();
        </script>

        <title>{title}</title>
        <meta name="description" content={description} />

        <link rel="canonical" href={canonicalUrl} />

        <link rel="icon" href="/favicon.svg" />
        <link rel="apple-touch-icon" href="/apple-touch-icon.png" />

        <link rel="preload" as="image" type="image/webp"
              imagesrcset="/hero-bg-light-sm.webp 768w,
                           /hero-bg-light-md.webp 1280w,
                           /hero-bg-light-lg.webp 1920w"
              imagesizes="100vw" />

        <meta property="og:type" content={ogType} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={ogImageUrl} />
        <meta property="og:url" content={canonicalUrl} />

        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:site" content="@DuetMailApp" />
        <meta name="twitter:title" content={title} />
        <meta name="twitter:description" content={description} />
        <meta name="twitter:image" content={ogImageUrl} />

        {extraHeadHtml ? <Fragment set:html={extraHeadHtml} /> : null}
    </head>
    <body>
        <Fragment set:html={gtmNoscriptHtml} />
        <slot />
    </body>
</html>
