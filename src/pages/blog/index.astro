---
import { getCollection } from "astro:content"
import BaseLayout from "../../layouts/BaseLayout.astro"
import Nav from "../../components/nav/Nav.astro"
import Footer from "../../components/sections/Footer.astro"

const posts = await getCollection("blog", ({ data }) => !data.draft)
const sortedPosts = posts.sort(
    (a, b) => b.data.publishedAt.getTime() - a.data.publishedAt.getTime()
)

const title = "Blog | Duet Mail"
const description =
    "Insights on email productivity, AI assistants, and making the most of your inbox. Tips, guides, and updates from the Duet Mail team."
---

<BaseLayout
    title={title}
    description={description}
    canonicalPath="/blog"
    ogImagePath="/og.jpg"
>
    <Nav />
    <main class="blog-index">
        <header class="blog-index-header">
            <h1 class="blog-index-title">Blog</h1>
            <p class="blog-index-description">
                Insights on email productivity, AI, and making the most of your inbox.
            </p>
        </header>

        {
            sortedPosts.length === 0 ? (
                <div class="blog-empty">
                    <p class="blog-empty-text">
                        No posts yet. Check back soon for insights on email
                        productivity and AI.
                    </p>
                </div>
            ) : (
                <div class="blog-grid">
                    {sortedPosts.map((post, index) => {
                        const isFirst = index === 0
                        const formattedDate = post.data.publishedAt.toLocaleDateString(
                            "en-US",
                            {
                                year: "numeric",
                                month: "short",
                                day: "numeric",
                            }
                        )

                        return (
                            <article
                                class:list={[
                                    "blog-card",
                                    { "blog-card--featured": isFirst },
                                ]}
                            >
                                <a
                                    href={`/blog/${post.id}`}
                                    class="blog-card-link"
                                >
                                    {post.data.coverImage && (
                                        <figure class="blog-card-image-wrapper">
                                            <img
                                                src={post.data.coverImage}
                                                alt={
                                                    post.data.coverImageAlt ||
                                                    post.data.title
                                                }
                                                class="blog-card-image"
                                                loading={isFirst ? "eager" : "lazy"}
                                                decoding="async"
                                            />
                                        </figure>
                                    )}

                                    <div class="blog-card-content">
                                        {post.data.tags.length > 0 && (
                                            <div class="blog-card-tags">
                                                {post.data.tags
                                                    .slice(0, 2)
                                                    .map((tag) => (
                                                        <span class="blog-card-tag">
                                                            {tag}
                                                        </span>
                                                    ))}
                                            </div>
                                        )}

                                        <h2 class="blog-card-title">
                                            {post.data.title}
                                        </h2>

                                        <p class="blog-card-excerpt">
                                            {post.data.description}
                                        </p>

                                        <div class="blog-card-meta">
                                            <span class="blog-card-author">
                                                {post.data.author}
                                            </span>
                                            <span
                                                class="blog-card-dot"
                                                aria-hidden="true"
                                            />
                                            <time
                                                datetime={post.data.publishedAt.toISOString()}
                                            >
                                                {formattedDate}
                                            </time>
                                        </div>
                                    </div>
                                </a>
                            </article>
                        )
                    })}
                </div>
            )
        }
    </main>
    <Footer />
</BaseLayout>

<style>
    .blog-index {
        min-height: 100vh;
        padding-top: 120px;
        padding-bottom: 80px;
    }

    /* Header */
    .blog-index-header {
        max-width: 1120px;
        margin: 0 auto 56px;
        padding: 0 24px;
        text-align: center;
    }

    @media (min-width: 768px) {
        .blog-index-header {
            padding: 0 40px;
            margin-bottom: 72px;
        }
    }

    .blog-index-title {
        font-family: var(--font-serif);
        font-size: 48px;
        font-weight: 500;
        letter-spacing: -0.03em;
        color: var(--prose-heading);
        margin: 0 0 16px;
    }

    @media (max-width: 639px) {
        .blog-index-title {
            font-size: 36px;
        }
    }

    .blog-index-description {
        font-size: 18px;
        line-height: 1.6;
        color: var(--prose-text);
        margin: 0;
        max-width: 480px;
        margin-left: auto;
        margin-right: auto;
    }

    /* Empty State */
    .blog-empty {
        max-width: 1120px;
        margin: 0 auto;
        padding: 80px 24px;
        text-align: center;
    }

    .blog-empty-text {
        font-size: 16px;
        color: var(--duet-muted);
        margin: 0;
    }

    /* Grid */
    .blog-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 32px;
        max-width: 1120px;
        margin: 0 auto;
        padding: 0 24px;
    }

    @media (min-width: 768px) {
        .blog-grid {
            grid-template-columns: repeat(2, 1fr);
            gap: 40px;
            padding: 0 40px;
        }
    }

    @media (min-width: 1024px) {
        .blog-grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    /* Featured Card */
    .blog-card--featured {
        grid-column: 1 / -1;
    }

    @media (min-width: 768px) {
        .blog-card--featured .blog-card-link {
            display: grid;
            grid-template-columns: 1.2fr 1fr;
            gap: 40px;
            align-items: center;
        }

        .blog-card--featured .blog-card-title {
            font-size: 32px;
        }

        .blog-card--featured .blog-card-excerpt {
            font-size: 16px;
            -webkit-line-clamp: 4;
        }
    }

    /* Card */
    .blog-card {
        position: relative;
    }

    .blog-card-link {
        display: flex;
        flex-direction: column;
        gap: 20px;
        text-decoration: none;
        color: inherit;
        transition: transform 0.3s cubic-bezier(0.22, 1, 0.36, 1);
    }

    .blog-card-link:hover {
        transform: translateY(-4px);
    }

    .blog-card-link:hover .blog-card-image {
        transform: scale(1.03);
    }

    .blog-card-link:hover .blog-card-title {
        color: var(--duet-accent-2);
    }

    /* Card Image */
    .blog-card-image-wrapper {
        position: relative;
        margin: 0;
        padding: 0;
        border-radius: 14px;
        overflow: hidden;
        background: var(--duet-border);
        aspect-ratio: 16 / 10;
    }

    .blog-card-image {
        display: block;
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s cubic-bezier(0.22, 1, 0.36, 1);
    }

    /* Card Content */
    .blog-card-content {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    /* Tags */
    .blog-card-tags {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
    }

    .blog-card-tag {
        font-size: 11px;
        font-weight: 600;
        letter-spacing: 0.04em;
        text-transform: uppercase;
        color: var(--duet-accent-2);
    }

    /* Title */
    .blog-card-title {
        font-family: var(--font-serif);
        font-size: 22px;
        font-weight: 500;
        line-height: 1.3;
        letter-spacing: -0.02em;
        color: var(--prose-heading);
        margin: 0;
        transition: color 0.2s ease;
        text-wrap: balance;
    }

    /* Excerpt */
    .blog-card-excerpt {
        font-size: 15px;
        line-height: 1.6;
        color: var(--prose-text);
        margin: 0;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    /* Meta */
    .blog-card-meta {
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 13px;
        color: var(--duet-muted);
        margin-top: 4px;
    }

    .blog-card-author {
        font-weight: 500;
    }

    .blog-card-dot {
        width: 3px;
        height: 3px;
        background: var(--duet-muted);
        border-radius: 50%;
        opacity: 0.5;
    }
</style>
