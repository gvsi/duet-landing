---
import BaseLayout from "../layouts/BaseLayout.astro";
import Nav from "../components/nav/Nav.astro";
import Hero from "../components/sections/Hero.astro";
import HeroBackground from "../components/sections/HeroBackground.astro";
import InboxHeroMockup from "../components/sections/InboxHeroMockup.astro";
import Logos from "../components/sections/Logos.astro";
import CategorizationShowcase from "../components/sections/CategorizationShowcase.astro";
import DraftShowcase from "../components/sections/DraftShowcase.astro";
import AgentChatShowcase from "../components/sections/AgentChatShowcase.astro";
import ShowcaseContainer from "../components/sections/ShowcaseContainer.astro";
import Testimonials from "../components/sections/Testimonials.astro";
import Pricing from "../components/sections/Pricing.astro";
import FAQ from "../components/sections/FAQ.astro";
import FinalCTA from "../components/sections/FinalCTA.astro";
import Footer from "../components/sections/Footer.astro";
import homeJsonLdHtml from "../snippets/home-jsonld.html?raw";

const title = "Duet Mail | Gmail AI Assistant | Save 4+ Hours Every Week";
const description =
    "Duet Mail's AI Gmail assistant summarizes emails, drafts replies, and organizes your inbox. Save 4+ hours weekly.";
---

<BaseLayout
    title={title}
    description={description}
    canonicalPath="/"
    ogImagePath="/og.jpg"
    extraHeadHtml={homeJsonLdHtml}
>
    <Nav />
    <main class="relative isolate">
        <HeroBackground />
        <Hero>
            <div class="mt-10 w-full">
                <InboxHeroMockup />
            </div>
        </Hero>
        <Logos />
        <ShowcaseContainer>
            <CategorizationShowcase />
            <DraftShowcase />
            <AgentChatShowcase />
        </ShowcaseContainer>
        <Testimonials />
        <Pricing />
        <FAQ />
    </main>
    <FinalCTA />
    <Footer />
</BaseLayout>
